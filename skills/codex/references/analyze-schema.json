{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Codex Analyze Result",
  "description": "Structured output from Codex deep analysis",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "status": {
      "type": "string",
      "enum": ["complete", "partial"],
      "description": "Analysis status: complete (thorough analysis done), partial (some areas not fully covered)"
    },
    "summary": {
      "type": "string",
      "description": "One-paragraph summary of the analysis findings"
    },
    "scope": {
      "type": "string",
      "description": "Description of what was analyzed (files, directories, content type)"
    },
    "findings": {
      "type": "array",
      "description": "List of analysis findings",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "category": {
            "type": "string",
            "description": "Finding category (e.g., architecture, security, performance, quality, dependency, pattern)"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "major", "minor", "info"]
          },
          "title": {
            "type": "string",
            "description": "Short title for the finding"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the finding"
          },
          "evidence": {
            "type": "string",
            "description": "Specific evidence: file:line reference, data point, or metric"
          },
          "recommendation": {
            "type": "string",
            "description": "Actionable recommendation to address this finding"
          }
        },
        "required": ["category", "severity", "title", "description", "evidence", "recommendation"]
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": true,
      "description": "Quantitative metrics from the analysis (free-form key-value pairs)"
    },
    "recommendations": {
      "type": "array",
      "description": "Prioritized list of actionable recommendations",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "title": {
            "type": "string",
            "description": "Short title for the recommendation"
          },
          "description": {
            "type": "string",
            "description": "Detailed description with expected impact"
          },
          "effort": {
            "type": "string",
            "enum": ["trivial", "small", "medium", "large"],
            "description": "Estimated effort to implement"
          }
        },
        "required": ["priority", "title", "description", "effort"]
      }
    },
    "iteration": {
      "type": "integer",
      "description": "Which iteration produced this result"
    }
  },
  "required": ["status", "summary", "scope", "findings", "metrics", "recommendations", "iteration"]
}
