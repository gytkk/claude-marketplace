{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Codex Analyze Result",
  "description": "Compact output from Codex deep analysis",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "status": {
      "type": "string",
      "enum": ["complete", "partial"]
    },
    "summary": {
      "type": "string",
      "maxLength": 100
    },
    "findings": {
      "type": "array",
      "maxItems": 5,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "major", "minor", "info"]
          },
          "title": {
            "type": "string",
            "maxLength": 50
          },
          "evidence": {
            "type": "string",
            "maxLength": 80
          },
          "recommendation": {
            "type": "string",
            "maxLength": 80
          }
        },
        "required": ["severity", "title", "evidence", "recommendation"]
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": true
    },
    "iteration": {
      "type": "integer"
    }
  },
  "required": ["status", "summary", "findings", "metrics", "iteration"]
}
