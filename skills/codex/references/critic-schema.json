{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Codex Critic Result",
  "description": "Structured output from Codex critic analysis",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "verdict": {
      "type": "string",
      "enum": ["pass", "warn", "fail"],
      "description": "Overall verdict: pass (good to go), warn (minor issues), fail (significant problems)"
    },
    "score": {
      "type": "number",
      "description": "Quality score from 0 (worst) to 10 (best)"
    },
    "summary": {
      "type": "string",
      "description": "One-paragraph summary of the review findings"
    },
    "issues": {
      "type": "array",
      "description": "List of identified issues",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "major", "minor", "info"]
          },
          "category": {
            "type": "string",
            "description": "Issue category (e.g., security, logic, style, performance, correctness)"
          },
          "file": {
            "type": "string",
            "description": "Affected file path (if applicable, empty string if not)"
          },
          "line": {
            "type": "number",
            "description": "Approximate line number (0 if not applicable)"
          },
          "description": {
            "type": "string",
            "description": "What the issue is"
          },
          "suggestion": {
            "type": "string",
            "description": "How to fix or improve"
          }
        },
        "required": ["severity", "category", "file", "line", "description", "suggestion"]
      }
    },
    "checklist": {
      "type": "array",
      "description": "Verification checklist items",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "item": {
            "type": "string",
            "description": "What was checked"
          },
          "passed": {
            "type": "boolean",
            "description": "Whether the check passed"
          },
          "note": {
            "type": "string",
            "description": "Additional context"
          }
        },
        "required": ["item", "passed", "note"]
      }
    },
    "iteration": {
      "type": "integer",
      "description": "Which iteration produced this result"
    }
  },
  "required": ["verdict", "score", "summary", "issues", "checklist", "iteration"]
}
