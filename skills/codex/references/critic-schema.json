{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Codex Critic Result",
  "description": "Compact output from Codex critic analysis",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "verdict": {
      "type": "string",
      "enum": ["pass", "warn", "fail"]
    },
    "score": {
      "type": "number"
    },
    "summary": {
      "type": "string",
      "maxLength": 100
    },
    "issues": {
      "type": "array",
      "maxItems": 5,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "major", "minor", "info"]
          },
          "file": {
            "type": "string",
            "description": "file:line format"
          },
          "description": {
            "type": "string",
            "maxLength": 80
          },
          "suggestion": {
            "type": "string",
            "maxLength": 80
          }
        },
        "required": ["severity", "file", "description", "suggestion"]
      }
    },
    "iteration": {
      "type": "integer"
    }
  },
  "required": ["verdict", "score", "summary", "issues", "iteration"]
}
